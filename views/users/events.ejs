<%- include('../partials/header'); %>

     <!-- Begin Page Content -->
     <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Events</h1>
        <p class="mb-4">You can search and edit event details.</p>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
          <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">All Events</h6>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered"  id="dataTable" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th>Manage</th>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Place</th>
                    <th>Requirements</th>
                  </tr>
                </thead>                
                <tbody>
                    <% allEvents.forEach(function(event) {   %>
                        <tr>
                          <% if(global.level == 4){ %>
                            <td class="text-center">
                                <button type="button" href="#" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#event<%= event.id %>">Mark as Finished</button>
                            </td>   
                          <% } else{ %>                       
                            <td class="text-center">No Access</td>
                          <% } %>
                            <td class="text-center"><%= event.title %></td>
                            <td class="text-center"><%= event.date %></td>
                            <td class="text-center"><%= event.time %></td>
                            <td class="text-center"><%= event.place %></td>
                            <td class="text-center"><%= event.requirements %></td>
                        </tr>
                        <!-- Delete Modal-->
                        <div class="modal fade" id="event<%= event.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Ready to Delete?</h5>
                                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">Ã—</span>
                                </button>
                                </div>
                                <div class="modal-body">Select "Delete" below if you are ready to delete this event from your event list.</div>
                                <div class="modal-footer">
                                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                                <a class="btn btn-primary" href="/delete-event?id=<%= event.id %>">Delete</a>
                                </div>
                            </div>
                            </div>
                        </div>
                    <%                              
                
                    }); %>
                </tbody>
                <tfoot>
                    <tr>
                        <th>Manage</th>
                        <th>Title</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Place</th>
                        <th>Requirements</th>
                    </tr>
                  </tfoot>
              </table>
            </div>
          </div>
        </div>

      </div>
      <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->


<%- include('../partials/footer'); %>