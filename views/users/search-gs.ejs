<%- include('../partials/header'); %>

     <!-- Begin Page Content -->
     <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">GSes</h1>
        <p class="mb-4">You can search and edit gs details.</p>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
          <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">All GSes</h6>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered"  id="dataTable" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th>Manage</th>
                    <th>Username</th>
                    <th>Division</th>
                    <th>Mobile</th>
                    <th>Email</th>
                  </tr>
                </thead>                
                <tbody>
                    <% gses.forEach(function(gs) { %>
                        <tr>
                            <td class="text-center">
                                <a type="button" href="#" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#gs<%= gs.id %>">Delete</a>
                            </td>
                            <td class="text-center"><%= gs.username %></td>
                            <td class="text-center">
                              <% if(gs.division == 1){ %>
                                Barathinagar
                              <% }else if(gs.division == 2){ %>
                                  Pugalenthinagar
                              <% } %>
                            </td>
                            <td class="text-center"><%= gs.mobile %></td>
                            <td class="text-center"><%= gs.email %></td>
                        </tr>
                         <!-- Delete Modal-->
                        <div class="modal fade" id="gs<%= gs.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Ready to Delete?</h5>
                                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">Ã—</span>
                                </button>
                                </div>
                                <div class="modal-body">Select "Delete" below if you are ready to delete this GS from your DS Division.</div>
                                <div class="modal-footer">
                                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                                <a class="btn btn-primary" href="/delete-gs?id=<%= gs.id %>">Delete</a>
                                </div>
                            </div>
                            </div>
                        </div>
                    <% }); %>
                </tbody>
                <tfoot>
                    <tr>
                        <th>Manage</th>
                        <th>Username</th>
                        <th>Division</th>
                        <th>Mobile</th>
                        <th>Email</th>
                    </tr>
                  </tfoot>
              </table>
            </div>
          </div>
        </div>

      </div>
      <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->


<%- include('../partials/footer'); %>





