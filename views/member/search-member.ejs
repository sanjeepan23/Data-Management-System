<%- include('../partials/header'); %>

     <!-- Begin Page Content -->
     <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Members</h1>
        <p class="mb-4">You can search and edit member details.</p>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
          <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">All Members</h6>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered"  id="dataTable" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th>Manage</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>NIC</th>
                    <th>Mobile</th>
                  </tr>
                </thead>                
                <tbody>
                    <% members.forEach(function(member) { %>
                        <tr>
                            <td class="text-center"><a type="button" href="/show-family?id=<%= member.familyID %>#<%= member.id %>" class="btn btn-primary btn-sm">Show</a></td>
                            <td class="text-center"><%= member.fname %></td>
                            <td class="text-center"><%= member.lname %></td>
                            <td class="text-center"><%= member.nic %></td>
                            <td class="text-center"><%= member.mobile %></td>
                        </tr>
                    <% }); %>
                </tbody>
                <tfoot>
                    <tr>
                        <th>Manage</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>NIC</th>
                        <th>Mobile</th>
                    </tr>
                  </tfoot>
              </table>
            </div>
          </div>
        </div>

      </div>
      <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->


<%- include('../partials/footer'); %>